<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/TextView_recommend_Fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/recommend"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:background="@drawable/navigation_selector" />

        <TextView
            android:id="@+id/TextView_entertainment_Fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/entertainment"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:background="@drawable/navigation_selector" />

        <TextView
            android:id="@+id/TextView_sport_Fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sport"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:background="@drawable/navigation_selector" />


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager_fragment_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>